doctype html
html(lang='en')
    head
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        // The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags
        meta(name='description', content='')
        meta(name='author', content='')
        title Signin Template for Bootstrap
        // Bootstrap core CSS
        link(href='../../bootstrap/dist/css/bootstrap.min.css', rel='stylesheet')
        // Custom styles for this template
        link(href='../../bootstrap/signin.css', rel='stylesheet')
    body
        .container
            form.form-signin(action="/login", method="post")
                h2.form-signin-heading Please sign in
                label.sr-only(for='inputEmail') Email address
                input#inputEmail.form-control(type='username', name="username",placeholder='Username', required='', autofocus='')
                label.sr-only(for='inputPassword') Password
                input#inputPassword.form-control(type='password',name="password", placeholder='Password', required='')
                .checkbox
                    label
                        input(type='checkbox', value='remember-me')
                        |  Remember me
                button.btn.btn-lg.btn-primary.btn-block(type='submit') Sign in