html
   head
      link(rel='shortcut icon', href='img/favicon.ico')
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge')
      meta(name='viewport', content='width=device-width, initial-scale=1')
      // The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags
      meta(name='description', content='')
      meta(name='author', content='')
      title Login
      // Custom styles for this template
      // Bootstrap Core CSS
      link(href='css/bootstrap.min.css', rel='stylesheet', type='text/css')
      // Fonts
      link(href='font-awesome/css/font-awesome.min.css', rel='stylesheet', type='text/css')
      link(href='css/animate.css', rel='stylesheet')
      // Squad theme CSS
      link(href='css/style.css', rel='stylesheet')
      link(href='color/default.css', rel='stylesheet')
      link(href='../../bootstrap/register.css', rel='stylesheet')
      script(type='text/javascript', src='http://code.jquery.com/jquery-1.7.1.min.js')
      script(src='../../bootstrap/js/register.js')
   body#page-top(background='img/bg1.jpg', data-spy='scroll', data-target='.navbar-custom')
      .container
         .header.clearfix
            nav.navbar.navbar-custom.navbar-fixed-top(role='navigation')
               .container
                  .collapse.navbar-collapse.navbar-right.navbar-main-collapse
                     ul.nav.navbar-nav
                        li.active
                           a(href='/')
                              font(color='White') Home
                        li
                           a(href='/#service')
                              font(color='White') About
                        li
                           a(href='login')
                              font(color='White') Login
                        li
                           a(href='charities')
                              font(color='White') Charities
                        li
                           a(href='plaid-login')
                              font(color='White') Bank
                        li
                           a(href='/#about')
                              font(color='White') Contacts
                  h3.text-muted
                     font(color='White') Give A Yeet
               
         .row
            .col-md-6.col-md-offset-3
               .panel.panel-login
                  .panel-heading
                     .row
                        .col-xs-6
                           a#login-form-link.active(href='#') Login
                        .col-xs-6
                           a#register-form-link(href='#register-form') Register
                     hr
                  .panel-body
                     .row
                        .col-lg-12
                           form#login-form(action='/login', method='post', role='form', style='display: block;')
                              .form-group
                                 input#username.form-control(type='text', name='username', tabindex='1', placeholder='Username', value='')
                              .form-group
                                 input#password.form-control(type='password', name='password', tabindex='2', placeholder='Password')
                              .form-group.text-center
                                 input#remember(type='checkbox', tabindex='3', name='remember')
                                 label(for='remember')  Remember Me
                              .form-group
                                 .row
                                    .col-sm-6.col-sm-offset-3
                                       input#login-submit.form-control.btn.btn-login(type='submit', name='login-submit', tabindex='4', value='Log In')
                              .form-group
                                 .row
                                    .col-lg-12
                                       .text-center
                                          a.forgot-password(href='/forgot-password', tabindex='5') Forgot Password?
                           form#register-form(action='/register', method='post', role='form', style='display: none;')
                              .form-group
                                 input#usernameReg.form-control(type='text', name='username', tabindex='1', placeholder='Username', value='')
                              .form-group
                                 input#emailReg.form-control(type='email', name='email', tabindex='1', placeholder='Email Address', value='')
                              .form-group
                                 input#passwordReg.form-control(type='password', name='password', tabindex='2', placeholder='Password')
                              .form-group
                                 input#confirm-passwordReg.form-control(type='password', name='confirm-password', tabindex='2', placeholder='Confirm Password')
                              .form-group
                                 .row
                                    .col-sm-6.col-sm-offset-3
                                       input#register-submit.form-control.btn.btn-register(type='submit', name='register-submit', tabindex='4', value='Register Now')
